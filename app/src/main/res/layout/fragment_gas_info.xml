                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressTint="@color/gas_co2"
                            android:progressBackgroundTint="@color/gas_bar_background"
                            android:progress="20" />

                        <TextView
                            android:id="@+id/tv_co2_percent"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="20%"
                            android:textSize="12sp"
                            android:textColor="@color/gas_co2"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Smoke Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Humo"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary" />

                        <ProgressBar
                            android:id="@+id/progress_smoke"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressTint="@color/gas_smoke"
                            android:progressBackgroundTint="@color/gas_bar_background"
                            android:progress="4" />

                        <TextView
                            android:id="@+id/tv_smoke_percent"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="4%"
                            android:textSize="12sp"
                            android:textColor="@color/gas_smoke"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Vapor Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Vapor"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary" />

                        <ProgressBar
                            android:id="@+id/progress_vapor"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="8dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressTint="@color/gas_vapor"
                            android:progressBackgroundTint="@color/gas_bar_background"
                            android:progress="2" />

                        <TextView
                            android:id="@+id/tv_vapor_percent"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="2%"
                            android:textSize="12sp"
                            android:textColor="@color/gas_vapor"
                            android:textStyle="bold"
                            android:gravity="end" />

                    </LinearLayout>

                    <!-- Others Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="Otros"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary" />

                        <ProgressBar
