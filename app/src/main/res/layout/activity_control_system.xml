<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/controlToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            app:title=" Sistema de Control"
            app:titleTextColor="@color/on_primary"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="@color/on_primary" />

        <!-- System Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/systemStatusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/border_light"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Estado del Sistema"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/systemStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Sistema Operativo"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/deviceCountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 0 dispositivos detectados"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/securityStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Cifrado Activo"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/networkStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" WiFi P2P Disponible"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Device Control Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/deviceControlCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/border_light"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Control de Dispositivos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="16dp" />

                <!-- Bluetooth Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Bluetooth"
                        android:textSize="16sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/bluetoothSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- WiFi P2P Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" WiFi P2P"
                        android:textSize="16sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/wifiP2PSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

                <!-- Scan Devices Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/scanDevicesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Escanear Dispositivos"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Security Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/securityCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/border_light"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Configuraci贸n de Seguridad"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="16dp" />

                <!-- Encryption Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Cifrado AES-256"
                        android:textSize="16sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/encryptionSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Auto Sync Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Sincronizaci贸n Autom谩tica"
                        android:textSize="16sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/autoSyncSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Sensitivity Slider -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Sensibilidad del Sensor: 75%"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sensitivitySlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="10"
                    android:valueTo="100"
                    android:value="75"
                    android:stepSize="5"
                    android:layout_marginBottom="16dp" />

                <!-- Interval Slider -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="憋 Intervalo de Sincronizaci贸n: 30s"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/intervalSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="5"
                    android:valueTo="300"
                    android:value="30"
                    android:stepSize="5"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Network Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/networkCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/border_light"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Gesti贸n de Red y Datos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:layout_marginBottom="16dp" />

                <!-- Export Data Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/exportDataBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text=" Exportar Datos"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Clear Cache Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/clearCacheBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Ч Limpiar Cache"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Diagnostics Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diagnosticsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Ejecutar Diagn贸sticos"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>