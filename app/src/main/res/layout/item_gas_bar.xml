<?xml version="1.0" encoding="utf-8"?>
<!-- ðŸ“Š Gas Bar Item Layout - Material Design TI3042 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:paddingHorizontal="4dp">

    <!-- ðŸ“Š Gas Info Row (Name + Value) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <!-- Gas Name -->
        <TextView
            android:id="@+id/tv_gas_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oâ‚‚ (OxÃ­geno)"
            style="@style/TextAppearance.AirMonitor.Caption"
            android:textColor="@color/text_primary"
            android:textSize="10sp" />

        <!-- Gas Value -->
        <TextView
            android:id="@+id/tv_gas_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="78%"
            style="@style/TextAppearance.AirMonitor.Caption"
            android:textColor="@color/gas_oxygen"
            android:textSize="10sp"
            android:minWidth="32dp"
            android:gravity="end" />

    </LinearLayout>

    <!-- ðŸ“Š Progress Bar Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@drawable/gas_bar_background">

        <!-- Progress Fill -->
        <View
            android:id="@+id/progress_fill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/gas_bar_fill"
            android:layout_gravity="start" />

    </FrameLayout>

</LinearLayout>