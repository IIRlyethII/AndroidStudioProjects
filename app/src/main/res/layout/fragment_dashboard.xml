<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bluetooth Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bluetooth_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#4CAF5020">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”—"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Conectado a ESP32_AirMonitor"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/connectionIndicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_indicator" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Main Air Quality Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_air_quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="#4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AIR QUALITY - PPM TOTAL"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvPPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="145"
                    android:textSize="36sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginVertical="12dp"
                    tools:text="245" />

                <TextView
                    android:id="@+id/tvAirLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buena Calidad"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:background="#4CAF5020"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    tools:text="MODERADO" />

                <!-- Gas Composition Preview -->
                <LinearLayout
                    android:id="@+id/layout_gas_composition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¬ ComposiciÃ³n Detectada (MQ-135)"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Gas bars will be added programmatically for now -->

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Temperature and Humidity Cards Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_temperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="#4CAF50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TEMPERATURA"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23.5Â°C"
                        android:textSize="24sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_marginVertical="8dp"
                        tools:text="23.5Â°C" />

                    <TextView
                        android:id="@+id/text_temperature_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textSize="10sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:background="#4CAF5020"
                        android:padding="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_humidity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="#4CAF50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HUMEDAD"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="62%"
                        android:textSize="24sp"
                        android:textColor="#212121"
                        android:textStyle="bold"
                        android:layout_marginVertical="8dp"
                        tools:text="62%" />

                    <TextView
                        android:id="@+id/text_humidity_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textSize="10sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:background="#4CAF5020"
                        android:padding="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Control System Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_control_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ›ï¸ Sistema de Control"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Auto Mode Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤–"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Modo AutomÃ¡tico"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_auto_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

                <!-- Auto Mode Status -->
                <TextView
                    android:id="@+id/text_auto_mode_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ… Activo: El sistema gestiona automÃ¡ticamente ventilador y alertas segÃºn niveles de PPM"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:background="#4CAF5010"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Manual Controls Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Control Manual (Desactivar modo automÃ¡tico)"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="12dp" />

                <!-- Fan Control -->
                <LinearLayout
                    android:id="@+id/layout_fan_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:alpha="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒªï¸"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ventilador de RenovaciÃ³n de Aire"
                        android:textSize="16sp"
                        android:textColor="#212121" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_fan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:checked="true" />

                </LinearLayout>

                <!-- Alert Control -->
                <LinearLayout
                    android:id="@+id/layout_alert_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:alpha="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”Š"
                        android:textSize="20sp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alerta Sonora"
                        android:textSize="16sp"
                        android:textColor="#212121" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:checked="false" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_monitoring"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="INICIAR MONITOREO"
                android:backgroundTint="#009688"
                app:cornerRadius="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_monitoring"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="DETENER"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="#009688"
                android:textColor="#009688"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- System Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_system_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡ Estado del Sistema"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Status Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#4CAF5020"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ESP32"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvConnectionStatus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conectado"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#4CAF5020"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sensores"
                            android:textColor="#4CAF50"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Operativos"
                            android:textSize="12sp"
                            android:textColor="#757575" />

                    </LinearLayout>

                </LinearLayout>

                <!-- System Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F320"
                    android:padding="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸ Ãšltima actualizaciÃ³n"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hace 2 segundos"
                            android:textSize="14sp"
                            android:textColor="#757575" />

                        <TextView
                            android:id="@+id/tvUptime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h 15m activo"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#757575"
                            tools:text="2h 15m" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FloatingActionButton para ir a controles -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_settings"
            android:contentDescription="Controles"
            app:tint="?attr/colorOnPrimary" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
