<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:titleTextColor="@color/on_primary"
            app:navigationIconTint="@color/on_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ðŸ“Š System Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/systemStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.AirMonitor.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š ESTADO DEL SISTEMA"
                        style="@style/TextAppearance.AirMonitor.Caption"
                        android:layout_marginBottom="12dp" />

                    <!-- Connected Devices -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“± Dispositivos Conectados:"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <TextView
                            android:id="@+id/tvConnectedDevices"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/TextAppearance.AirMonitor.Headline" />

                    </LinearLayout>

                    <!-- Signal Strength -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“¶ Intensidad de SeÃ±al:"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <TextView
                            android:id="@+id/tvSignalStrength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            style="@style/TextAppearance.AirMonitor.Headline" />

                    </LinearLayout>

                    <!-- Data Rate -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="âš¡ Velocidad de Datos:"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <TextView
                            android:id="@+id/tvDataRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 KB/s"
                            style="@style/TextAppearance.AirMonitor.Headline" />

                    </LinearLayout>

                    <!-- Uptime -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â±ï¸ Tiempo Activo:"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <TextView
                            android:id="@+id/tvUptime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            style="@style/TextAppearance.AirMonitor.Headline" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ðŸ“¶ Connectivity Controls -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/deviceControlCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.AirMonitor.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¶ CONECTIVIDAD"
                        style="@style/TextAppearance.AirMonitor.Caption"
                        android:layout_marginBottom="12dp" />

                    <!-- Bluetooth Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“± Bluetooth"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <TextView
                            android:id="@+id/tvBluetoothStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVO"
                            style="@style/TextAppearance.AirMonitor.Caption"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchBluetooth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- WiFi P2P Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“¡ WiFi Directo"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <TextView
                            android:id="@+id/tvWifiStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INACTIVO"
                            style="@style/TextAppearance.AirMonitor.Caption"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchWifiP2P"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ðŸ”’ Security Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/securityCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.AirMonitor.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”’ SEGURIDAD"
                        style="@style/TextAppearance.AirMonitor.Caption"
                        android:layout_marginBottom="12dp" />

                    <!-- Encryption Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ” Cifrado de Datos"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <TextView
                            android:id="@+id/tvEncryptionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HABILITADO"
                            style="@style/TextAppearance.AirMonitor.Caption"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchEncryption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Auto Sync Switch -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ”„ SincronizaciÃ³n Auto"
                            style="@style/TextAppearance.AirMonitor.Body" />

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switchAutoSync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ðŸŽšï¸ Configuration Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                style="@style/Widget.AirMonitor.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽšï¸ CONFIGURACIÃ“N"
                        style="@style/TextAppearance.AirMonitor.Caption"
                        android:layout_marginBottom="12dp" />

                    <!-- Sensitivity Slider -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Sensibilidad del Sensor"
                        style="@style/TextAppearance.AirMonitor.Body"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderSensitivity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="1"
                            android:valueTo="100"
                            android:value="75"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/tvSensitivityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            style="@style/TextAppearance.AirMonitor.Headline"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Data Interval Slider -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸ Intervalo de Datos"
                        style="@style/TextAppearance.AirMonitor.Body"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderInterval"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:valueFrom="5"
                            android:valueTo="120"
                            android:value="30"
                            android:stepSize="5" />

                        <TextView
                            android:id="@+id/tvIntervalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30s"
                            style="@style/TextAppearance.AirMonitor.Headline"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ðŸ”§ Action Buttons -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AirMonitor.CardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”§ ACCIONES"
                        style="@style/TextAppearance.AirMonitor.Caption"
                        android:layout_marginBottom="12dp" />

                    <!-- Buttons Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnScanDevices"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="ðŸ” Escanear"
                            style="@style/Widget.AirMonitor.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnExportData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="ðŸ“¤ Exportar"
                            style="@style/Widget.AirMonitor.Button" />

                    </LinearLayout>

                    <!-- Buttons Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearCache"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="ðŸ—‘ï¸ Limpiar"
                            style="@style/Widget.AirMonitor.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDiagnostics"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="ðŸ”§ DiagnÃ³sticos"
                            style="@style/Widget.AirMonitor.Button" />

                    </LinearLayout>

                    <!-- Reset Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”„ Restaurar ConfiguraciÃ³n"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="@color/primary"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>