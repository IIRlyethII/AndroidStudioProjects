<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- ðŸŽ¨ Base Application Theme - AirMonitor TI3042 -->
    <style name="Base.Theme.AirQualityMonitor" parent="Theme.Material3.DayNight.NoActionBar">
        
        <!-- ðŸŽ¯ Primary Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- ðŸŒ¿ Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- ðŸ“± Surface & Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- ðŸš¨ Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- ðŸ“ Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- ðŸŽ›ï¸ Control Colors -->
        <item name="colorControlActivated">@color/secondary</item>
        <item name="colorControlHighlight">@color/primary_50</item>
        
        <!-- ðŸ“Š Status Bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Material Components will be styled individually -->
        
    </style>

    <style name="Theme.AirQualityMonitor" parent="Base.Theme.AirQualityMonitor" />
    
    <!-- ðŸ“‹ Custom Card Style -->
    <style name="Widget.AirMonitor.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- ðŸ”˜ Custom Button Style -->
    <style name="Widget.AirMonitor.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- ðŸŽšï¸ Custom Switch Style -->
    <style name="Widget.AirMonitor.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/secondary</item>
    </style>
    
    <!-- ðŸ“Š Air Quality Card Styles -->
    <style name="Widget.AirMonitor.Card.AirQuality" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <style name="Widget.AirMonitor.Card.AirQuality.Good" parent="Widget.AirMonitor.Card.AirQuality">
        <item name="strokeColor">@color/air_quality_good</item>
        <item name="cardBackgroundColor">@color/card_success_bg</item>
    </style>
    
    <style name="Widget.AirMonitor.Card.AirQuality.Moderate" parent="Widget.AirMonitor.Card.AirQuality">
        <item name="strokeColor">@color/air_quality_moderate</item>
        <item name="cardBackgroundColor">@color/card_warning_bg</item>
    </style>
    
    <style name="Widget.AirMonitor.Card.AirQuality.Poor" parent="Widget.AirMonitor.Card.AirQuality">
        <item name="strokeColor">@color/air_quality_poor</item>
        <item name="cardBackgroundColor">@color/card_error_bg</item>
    </style>
    
    <style name="Widget.AirMonitor.Card.AirQuality.Critical" parent="Widget.AirMonitor.Card.AirQuality">
        <item name="strokeColor">@color/air_quality_critical</item>
        <item name="cardBackgroundColor">@color/card_error_bg</item>
    </style>
    
    <!-- ðŸ“ Text Styles -->
    <style name="TextAppearance.AirMonitor" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.AirMonitor.Headline" parent="TextAppearance.AirMonitor">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.AirMonitor.Body" parent="TextAppearance.AirMonitor">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.AirMonitor.Caption" parent="TextAppearance.AirMonitor">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="TextAppearance.AirMonitor.PPMValue" parent="TextAppearance.AirMonitor">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>